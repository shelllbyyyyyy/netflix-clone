{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "assets": [
      {
        "include": "./shared/libs/mailer/templates/**/*.ejs",
        "outDir": "dist",
        "watchAssets": true
      },
      {
        "include": "../keys/**/*",
        "outDir": "dist",
        "watchAssets": true
      }
    ]
  }
}
